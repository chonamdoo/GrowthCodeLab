<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <data>
        <variable
            name="position"
            type="Integer"
            />
        <variable
            name="count"
            type="Integer"
            />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/tv_like_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@{@string/s_like_item(position)}"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_like_item"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/d_like_margin"
            android:text="@{@string/s_like_item_count(count)}"
            />
    </RelativeLayout>
</layout>
